{
  "name"        : "jordanleven/force-refresh",
  "description" : "Force Refresh is a simple plugin that allows you to force a page refresh for users currently visiting your site.",
  "scripts": {
    "lint": "phpcs filter-force-refresh.php ./includes",
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-clover coverage/coverage.xml --coverage-html coverage/html"
  },
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^3.3",
    "phpcsstandards/php_codesniffer": "^3.9",
    "phpunit/phpunit": "^11",
    "php-mock/php-mock": "^2.7"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
